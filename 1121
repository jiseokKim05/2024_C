#include <stdio.h>
#include <string.h>

int main(void)
{
	char a[20] = "ABCD";
	printf("문자열의 길이 : %ld\n", strlen(a));
}
//////////////////////////////////////////////////////////
#include <string.h>
int strcmp(const char *string1, const char *string2);

#include <stdio.h>
#include <string.h>

int main(void)
{
	char a[20] = "ABCD";
	printf("문자열의 길이 : %ld\n", strlen(a));	
}
//////////////////////////////////////////////////////////
#define _CRT_SECURE_NO_WARNIGNS
#include <stdio.h>
#include <string.h>

int main(void)
{
	char a[20] = "ABCD";
	char b[20] = "Ji Seok KIM";
	
	strcpy(a, b);
	
	printf("복사된 문자열 : %s\n 문자열 길이 : %ld\n", a, strlen(a));
	
	return 0;
}
/////////////////////////////////////////////////////////////////////////////
#include <string.h>

char *strcat(char *string1, const char *string2);

#include <stdio.h>
#include <string.h>

int main(void)
{
	char a[20] = "ABCD";
	char b[20] = "Ji Seok KIM";
	strcat(a, b);
	printf("합쳐진 문자열 : %s \n", a);
}
/////////////////////////////////////////////////////////////////////////////////
#include <string.h>
char *strstr(const char *string1, const char *string2);

#include <stdio.h>
#include <string.h>

int main(void)
{
	char a[20] = "ABCD EFGH"
	char b[20] = "ABCD";
	printf("찾은 문자열 : %s \n", strstr(a, b));
}
